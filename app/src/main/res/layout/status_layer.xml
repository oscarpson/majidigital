<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/card_radius"
        android:elevation="@dimen/card_radius"
        android:layout_margin="@dimen/card_margin"
        android:id="@+id/carda">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:layout_width="@dimen/status_view"
                android:layout_height="120dp"
                android:background="@color/hintColor"
                android:id="@+id/status_view"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/status_view"
                android:layout_marginRight="@dimen/margin_inputs">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status"
                    android:textColor="@color/gold"
                    android:id="@+id/txt_status"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/margin_inputs"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Name: Oscar Muigai"
                    android:textAlignment="center"
                    android:layout_below="@id/txt_status"
                    android:id="@+id/txt_name"
                    android:textColor="@color/blackColor"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_cust_type"
                    android:text="C. Type: Monthly"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/txt_name"
                    android:layout_marginTop="@dimen/margin_inputs"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_phone"
                    android:text="Phone: 0708396044"
                    android:layout_marginTop="@dimen/margin_inputs"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/txt_name"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_billing"
                    android:text="City: Nairobi"
                    android:layout_marginTop="@dimen/margin_inputs"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/txt_cust_type"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_zone"
                    android:text="Zone: Ngara"
                    android:layout_marginTop="@dimen/margin_inputs"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/txt_cust_type"/>
                <ImageView
                    android:layout_width="@dimen/icon_size"
                    android:layout_height="@dimen/icon_size"
                    android:layout_below="@id/txt_billing"
                    android:layout_alignParentRight="true"
                    android:id="@+id/img_next"
                    android:layout_marginTop="@dimen/margin_inputs"
                    android:src="@drawable/ic_next"/>

                <TextView
                    android:id="@+id/txt_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_billing"
                    android:layout_marginTop="@dimen/margin_inputs"
                    android:layout_toLeftOf="@id/img_next"
                    android:layout_marginRight="@dimen/margin_inputs"
                    android:text="location" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtgeodata"
                    android:visibility="gone"/>

            </RelativeLayout>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>
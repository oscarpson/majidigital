<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"


            app:cardCornerRadius="4dp"
            android:layout_centerHorizontal="true"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background_color"

                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_horizontal_margin"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="@dimen/circularimg"
                            android:layout_height="@dimen/circularimg"
                            android:src="@drawable/meter"
                            android:id="@+id/detailimg"
                            app:civ_border_width="1dp"
                            app:civ_border_color="@color/whiteColor"
                            android:layout_alignParentLeft="true"
                            />
                        <TextView
                            android:layout_width="@dimen/circularimg"
                            android:layout_height="wrap_content"
                            android:textColor="@color/textcolor"
                            android:textAlignment="center"
                            android:text="Reading"
                            android:layout_alignParentLeft="true"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="@dimen/circularimg"
                            android:layout_height="@dimen/circularimg"
                            android:src="@drawable/survey"
                            android:id="@+id/regimg"
                            app:civ_border_width="1dp"
                            app:civ_border_color="@color/whiteColor"
                            android:layout_alignParentLeft="true"
                            />
                        <TextView
                            android:layout_width="@dimen/circularimg"
                            android:layout_height="wrap_content"
                            android:textColor="@color/textcolor"
                            android:textAlignment="center"
                            android:text="Register"
                            android:layout_alignParentLeft="true"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="@dimen/circularimg"
                            android:layout_height="@dimen/circularimg"
                            android:src="@drawable/mapicon"
                            android:id="@+id/qcimg"
                            app:civ_border_width="1dp"
                            app:civ_border_color="@color/whiteColor"
                            android:layout_alignParentLeft="true"
                            />
                        <TextView
                            android:layout_width="@dimen/circularimg"
                            android:layout_height="wrap_content"
                            android:textColor="@color/textcolor"
                            android:textAlignment="center"
                            android:text="Zone map"
                            android:layout_alignParentLeft="true"
                            />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_horizontal_margin"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="@dimen/circularimg"
                            android:layout_height="@dimen/circularimg"
                            android:src="@drawable/payments"
                            app:civ_border_width="1dp"
                            android:id="@+id/testimg"
                            app:civ_border_color="@color/whiteColor"
                            android:layout_alignParentLeft="true"
                            />
                        <TextView
                            android:layout_width="@dimen/circularimg"
                            android:layout_height="wrap_content"
                            android:textColor="@color/textcolor"
                            android:textAlignment="center"
                            style="@style/Base.TextAppearance.AppCompat.Body1"
                            android:text="Payments"
                            android:layout_alignParentLeft="true"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="@dimen/circularimg"
                            android:layout_height="@dimen/circularimg"
                            android:src="@drawable/disconnect"
                            android:id="@+id/disconnectimg"
                            app:civ_border_width="1dp"
                            app:civ_border_color="@color/whiteColor"
                            android:layout_alignParentLeft="true"
                            />
                        <TextView
                            android:layout_width="@dimen/circularimg"
                            android:layout_height="wrap_content"
                            android:textColor="@color/textcolor"
                            android:textAlignment="center"
                            style="@style/Base.TextAppearance.AppCompat.Body1"
                            android:text="Disconnect"
                            android:layout_alignParentLeft="true"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="@dimen/circularimg"
                            android:layout_height="@dimen/circularimg"
                            android:src="@drawable/reconnection"
                            android:id="@+id/lotapproveimg"
                            app:civ_border_width="1dp"
                            app:civ_border_color="@color/whiteColor"
                            android:layout_alignParentLeft="true"
                            />
                        <TextView
                            android:layout_width="@dimen/circularimg"
                            android:layout_height="wrap_content"
                            android:textColor="@color/textcolor"
                            android:textAlignment="center"
                            style="@style/Base.TextAppearance.AppCompat.Body1"
                            android:text="Connection"
                            android:layout_alignParentLeft="true"
                            />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_horizontal_margin"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="@dimen/circularimg"
                            android:layout_height="@dimen/circularimg"
                            android:src="@drawable/profile"
                            android:id="@+id/profileimg"
                            app:civ_border_width="1dp"
                            app:civ_border_color="@color/whiteColor"
                            android:layout_alignParentLeft="true"
                            />
                        <TextView
                            android:layout_width="@dimen/circularimg"
                            android:layout_height="wrap_content"
                            android:textColor="@color/textcolor"
                            android:textAlignment="center"
                            android:text="Profile"
                            android:layout_alignParentLeft="true"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="@dimen/circularimg"
                            android:layout_height="@dimen/circularimg"
                            android:src="@drawable/analytics"
                            app:civ_border_width="1dp"
                            android:id="@+id/fudimg"
                            app:civ_border_color="@color/whiteColor"
                            android:layout_alignParentLeft="true"
                            />
                        <TextView
                            android:layout_width="@dimen/circularimg"
                            android:layout_height="wrap_content"
                            android:textColor="@color/textcolor"
                            android:textAlignment="center"
                            android:text="Status"
                            android:layout_alignParentLeft="true"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="@dimen/circularimg"
                            android:layout_height="@dimen/circularimg"
                            android:src="@drawable/profile"
                            android:id="@+id/noticeimg"
                            app:civ_border_width="1dp"
                            app:civ_border_color="@color/whiteColor"
                            android:layout_alignParentLeft="true"
                            />
                        <TextView
                            android:layout_width="@dimen/circularimg"
                            android:layout_height="wrap_content"
                            android:textColor="@color/textcolor"
                            android:textAlignment="center"
                            android:text="Notification"
                            android:layout_alignParentLeft="true"
                            />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
</RelativeLayout>